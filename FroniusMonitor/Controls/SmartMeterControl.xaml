<UserControl x:Class="De.Hochstaetter.FroniusMonitor.Controls.SmartMeterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:De.Hochstaetter.FroniusMonitor.Controls"
             xmlns:p="clr-namespace:De.Hochstaetter.Fronius.Localization;assembly=Fronius"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Viewbox DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:SmartMeterControl}}">
        <Border BorderBrush="DimGray" BorderThickness="1">
            <Grid Background="AntiqueWhite">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Viewbox Grid.Row="0" HorizontalAlignment="Stretch" Width="100" StretchDirection="DownOnly">
                    <TextBlock Grid.Row="0" HorizontalAlignment="Stretch" FontSize="8" Text="{Binding SmartMeter, FallbackValue=---}" TextAlignment="Center"/>
                </Viewbox>

                <Grid Grid.Row="1" Background="#B3DBC6" Width="100" Height="94" Margin="4">
                    <Grid.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#082A18"/>
                            <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#DS-Digital"/>
                            <Setter Property="FontSize" Value="16"/>
                        </Style>
                    </Grid.Resources>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Viewbox Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" StretchDirection="DownOnly" Height="15" Margin="0,3,0,0">
                        <TextBlock x:Name="Header" TextAlignment="Center" HorizontalAlignment="Stretch" Text="{x:Static p:Resources.PleaseWait}"/>
                    </Viewbox>

                    <TextBlock x:Name="Label1" Grid.Row="1" Grid.Column="0" Text="L1" Margin="0,4,0,0"/>
                    <TextBlock x:Name="Label2" Grid.Row="2" Grid.Column="0" Text="L2" Margin="0,2,0,0"/>
                    <TextBlock x:Name="Label3" Grid.Row="3" Grid.Column="0" Text="L3" Margin="0,2,0,0"/>
                    <TextBlock x:Name="LabelSum" FontWeight="Bold" Grid.Row="4" Grid.Column="0" Text="Sum" Margin="0,2,0,0"/>
                    <TextBlock x:Name="Value1" TextAlignment="Right" Grid.Row="1" Grid.Column="1" Text="---" Margin="0,4,0,0"/>
                    <TextBlock x:Name="Value2" TextAlignment="Right" Grid.Row="2" Grid.Column="1" Text="---" Margin="0,2,0,0"/>
                    <TextBlock x:Name="Value3" TextAlignment="Right" Grid.Row="3" Grid.Column="1" Text="---" Margin="0,2,0,0"/>
                    <TextBlock x:Name="ValueSum" FontWeight="Bold" TextAlignment="Right" Grid.Row="4" Grid.Column="1" Text="---" Margin="0,2,0,0"/>

                </Grid>

                <WrapPanel MaxWidth="110" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <WrapPanel.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ButtonBase">
                                        <Border x:Name="Border" Background="BurlyWood"  Margin="2,1" Padding="1">
                                            <ContentPresenter  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="Coral"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black" FontSize="6" Text="{TemplateBinding Content}"/>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </WrapPanel.Resources>
                    <Button Content="{x:Static p:Resources.Power}" Click="OnPowerClick"/>
                    <Button Content="{x:Static p:Resources.Voltage}" Click="OnVoltageClick"/>
                    <Button Content="{x:Static p:Resources.Current}" Click="OnCurrentClick"/>
                    <Button Content="{x:Static p:Resources.More}" Click="OnMoreClick"/>
                </WrapPanel>

            </Grid>
        </Border>
    </Viewbox>
</UserControl>
